<UserControl x:Class="Elva.Pages.Settings.Views.LicenseInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Margin="5,5,0,0"
                       Height="30"
                       Width="30"
                       Cursor="Hand"
                       Source="\Resources\Images\Window\back.png">
                    <Image.InputBindings>
                        <MouseBinding  Gesture="LeftClick"
                                       Command="{Binding BackToSettingsCommand}" />
                    </Image.InputBindings>
                </Image>
                <TextBlock Margin="5,10,10,10"
                           Text="Licenses"
                           FontSize="30"
                           Foreground="{DynamicResource TextPrimary}" />
            </StackPanel>
            <Border Background="{DynamicResource PanelBackground}"
                    CornerRadius="5"
                    Margin="10,5,10,5"
                    Padding="10">
                <StackPanel>
                    <TextBlock Margin="0,5,0,5"
                               Text="AngleSharp - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://anglesharp.github.io/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="CommunityToolkit.Mvvm - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://github.com/CommunityToolkit/dotnet/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="LottieSharp - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://github.com/quicoli/LottieSharp/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="Microsoft.EntityFrameworkCore.Sqlite - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://learn.microsoft.com/en-us/ef/core/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="Microsoft.Extensions.DependencyInjection - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://dot.net/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="Shard.WebsiteScraper - MIT License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://github.com/TypNull/WebsiteScraper/" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="Xaml Radial Progress Bar - Apache-2.0 License"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://github.com/panthernet/XamlRadialProgressBar" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Margin="0,5,0,5"
                               Text="IText7 - GNU GPL Version 3"
                               Cursor="Hand"
                               Foreground="{DynamicResource TextPrimary}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding OpenWebsiteCommand, Mode=OneTime}"
                                          CommandParameter="https://itextpdf.com" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

    </ScrollViewer>
</UserControl>