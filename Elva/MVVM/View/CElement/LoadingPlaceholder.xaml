<UserControl x:Class="Elva.MVVM.View.CElement.LoadingPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Border Background="{DynamicResource BackgroundSecondary}"
            CornerRadius="5"
            Opacity="0.7">
        <Grid>
            <Rectangle x:Name="AnimatedRect"
                       Fill="#20FFFFFF"
                       HorizontalAlignment="Left"
                       Width="100">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="RectTransform"
                                        X="-100" />
                </Rectangle.RenderTransform>
            </Rectangle>
        </Grid>
    </Border>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation Storyboard.TargetName="RectTransform"
                                     Storyboard.TargetProperty="X"
                                     From="-100"
                                     To="400"
                                     Duration="0:0:1.5"
                                     AutoReverse="False" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>