<UserControl x:Class="Elva.MVVM.View.CControl.Search.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Elva.MVVM.View.CControl.Search"
             xmlns:celement="clr-namespace:Elva.MVVM.View.CElement"
             xmlns:search="clr-namespace:Elva.MVVM.ViewModel.CControl.Search"
             xmlns:lottie="clr-namespace:LottieSharp.WPF;assembly=LottieSharp"
             d:DataContext="{d:DesignInstance Type=search:SearchVM}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <local:FilterView DataContext="{Binding FilterVM}" />
            <ItemsControl Margin="10,0,5,5" ItemsSource="{Binding Items}"
                          VirtualizingPanel.ScrollUnit="Pixel"
                          VirtualizingPanel.IsContainerVirtualizable="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:SearchItemView DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <celement:UniformGridPanel Columns="2"
                                                   Rows="1000"
                                                   ItemHeight="230"
                                                   SizeChanged="UniformGridPanel_SizeChanged"
                                                   IsVirtualizing="True"
                                                   VirtualizingPanel.ScrollUnit="Pixel"
                                                   VirtualizationMode="Recycling" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch" />
                        <Setter Property="Margin"
                                Value="0,10,10,0" />
                        <Setter Property="VerticalAlignment"
                                Value="Top" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <StackPanel Visibility="{Binding NothingFoundVisibility, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}">
                <Image RenderOptions.BitmapScalingMode="Fant"
                       Source="\Recource\Image\Search\nothing_found.png"
                       Margin="10,50,10,10"
                       MaxWidth="250"
                       StretchDirection="Both"
                       Stretch="Fill" />
                <TextBlock Text="Nothing Found"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Foreground="{DynamicResource TextSecondary}"
                           FontSize="30"
                           FontFamily="Calibri" />
            </StackPanel>
            <StackPanel Visibility="{Binding LoadingVisibility, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}">
                <lottie:LottieAnimationView AutoPlay="True"
                                            Width="500"
                                            Height="500"
                                            ResourcePath="pack://application:,,,/Recource/Animation/loading.json"
                                            RepeatCount="-1" />
                <TextBlock Text="Loading..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Foreground="{DynamicResource TextSecondary}"
                           FontSize="30"
                           Margin="10,-100,10,60"
                           FontFamily="Calibri" />
            </StackPanel>
            <Button Content="Load More"
                    Command="{Binding LoadMoreCommand}"
                    Visibility="{Binding LoadMoreVisibility, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}"
                    Height="40"
                    Style="{StaticResource ModernButton}"
                    Width="300"
                    Margin="10"
                    Foreground="{DynamicResource TextPrimary}"
                    TextBlock.FontSize="19"
                    TextBlock.FontFamily="Arial">
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#FF00C0F0"
                                      Offset="0.3" />
                        <GradientStop Color="#FF0099FF"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>